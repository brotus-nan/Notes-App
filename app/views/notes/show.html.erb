<h1><%= @note.title %></h1>
<p><%= @note.content %></p>

<button>
  <%= link_to "Edit", edit_note_path(@note) %>
</button>


<%= simple_form_for @note, url: archive_note_path(@note), method: :put do |f| %>
  <%= f.button :submit, 'Set Status to Archived' %>
<% end %>

<%= simple_form_for @note, url: delete_note_path(@note), method: :put do |f| %>
  <%= f.button :submit, 'Set Status to Deleted' %>
<% end %>