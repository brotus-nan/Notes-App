%body.gradient-custom{style: "height: 100vh"}
  .container.d-flex.flex-column.align-items-center.justify-content-center.h-100
    %h1
      %u= @note.title
    %p= @note.content

    .d-flex.gap-3
      = link_to "Edit", edit_note_path(@note), class: "btn create-note-button"

      - unless @note.status == $valid_statuses[:archived]
        = simple_form_for @note, url: archive_note_path(@note), method: :put do |f|
          = f.button :submit, 'Archive Note', class: "btn create-note-button"

      - unless @note.status == $valid_statuses[:deleted]
        = simple_form_for @note, url: delete_note_path(@note), method: :put do |f|
          = f.button :submit, 'Delete note', class: "btn create-note-button"
    = link_to "Back", notes_path(@note), class: "btn btn-lg btn-outline-light mt-3"

