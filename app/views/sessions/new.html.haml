%section.vh-100.gradient-custom
  .container.py-5.h-100
    .row.d-flex.justify-content-center.align-items-center.h-100
      .col-12.col-md-8.col-lg-6.col-xl-5
        .card.bg-dark.text-white{style: "border-radius: 1rem;"}
          .card-body.p-5.text-center
            .mb-md-5.mt-md-4.pb-5
              %h2.fw-bold.mb-2.text-uppercase Login
              %p.text-white-50.mb-5 Please enter your login and password!
              = form_with url: login_path, scope: :user do |form|
                %div
                  = form.label :email, class: "form-label"
                  = form.email_field :email, required: true, id: "typeEmailX", class: "form-control form-control-lg"
                %div
                  = form.label :password, class: "form-label"
                  = form.password_field :password, required: true, id: "typePasswordX", class: "form-control form-control-lg"
                = form.submit "Sign in", class: "btn btn-outline-light btn-lg px-5 mt-5"
            - flash.each do |key, value|
              .alert{ :class => "alert alert-danger alert-#{key}" }
                %strong= value

            = form_tag(sign_up_path, method: :get) do
              %p.mb-0 Don't have an account?
              %a.text-white-50.fw-bold.link-underline-opacity-0.link-primary{href: "sign_up"}Sign Up
