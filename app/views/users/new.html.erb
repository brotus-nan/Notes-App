<!-- app/views/sessions/new.html.erb -->
<section class="vh-100 gradient-custom">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card bg-dark text-white" style="border-radius: 1rem;">
          <div class="card-body p-5 text-center">

            <div class="mb-md-5 mt-md-4 pb-5">

              <h2 class="fw-bold mb-2 text-uppercase">Register</h2>
              <p class="text-white-50 mb-5">Fill out the form below to create an account!</p>

              <%= form_with model: @user, url: sign_up_path do |form| %>
                <%= render partial: "shared/form_errors", locals: { object: form.object } %>
                <div>
                  <%= form.label :email, class: "form-label"  %>
                  <%= form.email_field :email, required: true, id: "typeEmailX", class: "form-control form-control-lg"%>
                </div>
                <div>
                  <%= form.label :password, class: "form-label" %>
                  <%= form.password_field :password, required: true, id: "typePasswordX", class: "form-control form-control-lg" %>
                </div>

                <div>
                  <%= form.label :password_confirmation, class: "form-label" %>
                  <%= form.password_field :password_confirmation, required: true, id: "typePasswordConfirmX", class: "form-control form-control-lg" %>
                </div>

                <%= form.submit "Sign Up", class: "btn btn-outline-light btn-lg px-5 mt-5" %>
              <% end %>

              <% if flash[:alert] %>
                <div class="alert alert-danger">
                  <%= flash[:alert] %>
                </div>
              <% end %>

            </div>

            <%= form_tag(sign_up_path, method: :get) do %>
              <p class="mb-0">Already have an account? <a href="login" class="text-white-50 fw-bold link-underline-opacity-0 link-primary">Login</a></p>
            <% end %>

          </div>
        </div>
      </div>
    </div>
  </div>
</section>
